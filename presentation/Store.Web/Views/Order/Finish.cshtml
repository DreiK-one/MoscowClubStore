@model OrderModel
@{
    ViewData["Title"] = "The order has been placed";
}

<br />
<h4>
    The order has been placed.
    We collect it in order to transfer it to the delivery service. 
    Wait for the SMS.
</h4>

<p>
    <table class="table table-sm table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">№</th>
                <th scope="col">Author</th>
                <th scope="col">Name</th>
                <th scope="col">Number</th>
                <th scope="col">Price</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Items.Length; i++)
            {
                <tr>
                    <td class="text-right">@(i + 1)</td>
                    <td>@Model.Items[i].Author</td>
                    <td>@Model.Items[i].Title</td>
                    <td class="text-right">@Model.Items[i].Count</td>
                    <td class="text-right">@Model.Items[i].Price</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total</td>
                <td class="text-right">@Model.TotalCount</td>
                <td class="text-right">@Model.TotalPrice</td>
            </tr>
        </tfoot>
    </table>

    <strong>Delivery</strong>
    <pre>
        @Model.DeliveryDescription
    </pre>

    <strong>Payment</strong>
    <pre>
        @Model.PaymentDescription
    </pre>
</p>

<p>
    <a href="@Url.Action("Index", "Home")">Back to the store</a>
</p>

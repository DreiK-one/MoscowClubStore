@model IReadOnlyCollection<BookModel>

@{
    ViewData["Title"] = "Search results";
}

<h1>Search results</h1>

@if (Model.Count == 0)
{
    <h4>Nothing was found!</h4>
}
else
{
    <ul>
        @foreach (var book in Model)
        {
            <li><a href="@Url.Action("Index", "Book", new { id = book.Id})">@book.Title</a></li>
        }
    </ul>
}

